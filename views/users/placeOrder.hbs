        <form id="checkout-form" action="#" method="post">
            <div class="checkout-wrap pt-20">

                <div class="row">

                    <div class="col-lg-6">
                        <div class="billing-info-wrap mr-50">

                            <h3>Billing Details</h3>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="billing-select mb-20">
                                        <label>Choose Your Address <abbr class="required"
                                                title="required">*</abbr></label>
                                        <select>
                                            <option>Address 1</option>
                                            <option>Address 2</option>
                                            <option>Address 3</option>
                                        </select>
                                    </div>
                                    <h4>Add New Delivery Address</h4>
                                </div>

                                <input type="text" name="userId" id="" value="{{user._id}}" hidden>
                                
                                <div class="col-lg-12 col-md-12">
                                    <div class="billing-info mb-20 form-floating">
                                        <input type="text" name="Name" class="form-control" id="floatingName"
                                            placeholder=".">
                                        <label for="floatingName">Your Name </label>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="billing-info mb-20 form-floating">

                                        <input name="HouseNo" placeholder="." type="text" class="form-control" id="1">
                                        <label for="1">House number and street name.</label>
                                    </div>
                                    <div class="billing-info mb-20 form-floating">
                                        <input name="Street" placeholder="." type="text" class="form-control" id="1">
                                        <label for="1">Street Address.</label>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="billing-info mb-20 form-floating">
                                        <input name="TownCity" placeholder="." type="text" class="form-control" id="1">
                                        <label for="1">Town / City</label>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="billing-info mb-20 form-floating">
                                        <input name="State" placeholder="." type="text" class="form-control" id="1">
                                        <label for="1">State</label>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="billing-info mb-20 form-floating">
                                        <input name="Country" placeholder="." type="text" class="form-control" id="1">
                                        <label for="1">Country</label>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="billing-info mb-20 form-floating">
                                        <input name="PostCode" placeholder="." type="number" class="form-control"
                                            id="1">
                                        <label for="1">Post Code / ZIP</label>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="billing-info mb-20 form-floating">
                                        <input name="Mobile" placeholder="." type="number" class="form-control" id="1">
                                        <label for="1">Mobile</label>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="billing-info mb-20 form-floating">
                                        <input name="Email" placeholder="." type="email" class="form-control" id="1">
                                        <label for="1">Email Address</label>
                                    </div>
                                </div>
                            </div>
                            <div class="additional-info-wrap">
                                <label >Order notes</label>
                                <textarea  placeholder="Notes about your order, e.g. special notes for delivery. "
                                    name="message"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="your-order-area">
                            <h3>Your order</h3>
                            <div class="your-order-wrap gray-bg-4">
                                <div class="your-order-info-wrap">
                                    <div class="your-order-info">
                                        <ul>
                                            <li>Product <span>Total</span></li>
                                        </ul>
                                    </div>
                                    <div class="your-order-middle">
                                        <ul>
                                            {{#each products}}
                                            <li>{{this.product.title}}  X {{quantity}} <span>Rs. {{this.productTotal}} </span></li>
                                            {{/each}}
                                            
                                        </ul>
                                    </div>
                                    
                                    <div class="your-order-info order-subtotal">
                                        
                                        <ul>
                                            <li>Subtotal <span>Rs.{{total}} </span>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="your-order-info order-shipping">
                                        <ul>
                                            <li>Shipping <p>Enter your full address </p>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="your-order-info order-total">
                                        <ul>
                                            <li>Total <span>Rs.{{total}} </span></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="payment-method">
                                    <div class="pay-top sin-payment">
                                        {{!-- checked="checked" --}}
                                        <input id="payment-method-3" class="input-radio" type="radio" value="COD"
                                            name="payment_method">
                                        <label for="payment-method-3">Cash on delivery </label>
                                        <div class="payment-box payment_method_bacs">
                                            <p>Pay cash Only on Delivery.</p>
                                        </div>
                                    </div>
                                    <div class="pay-top sin-payment">
                                        <input id="payment_method_1" class="input-radio" type="radio"
                                            value="DirectTransfer" name="payment_method">
                                        <label for="payment_method_1"> Direct Bank Transfer </label>
                                        <div class="payment-box payment_method_bacs">
                                            <p>Make your payment directly into our bank account. Please use your Order
                                                ID as
                                                the payment reference.</p>
                                        </div>
                                    </div>
                                    <div class="pay-top sin-payment">
                                        <input id="payment-method-2" class="input-radio" type="radio" value="cheque"
                                            name="payment_method">
                                        <label for="payment-method-2">Check payments</label>
                                        <div class="payment-box payment_method_bacs">
                                            <p>Make your payment directly into our bank account. Please use your Order
                                                ID as
                                                the payment reference.</p>
                                        </div>
                                    </div>

                                    <div class="pay-top sin-payment sin-payment-3">
                                        <input id="payment-method-4" class="input-radio" type="radio" value="payPal"
                                            name="payment_method">
                                        <label for="payment-method-4">PayPal <img alt=""
                                                src="assets/images/icon-img/payment.png"><a href="#">What is
                                                PayPal?</a></label>
                                        <div class="payment-box payment_method_bacs">
                                            <p>Make your payment directly into our bank account. Please use your Order
                                                ID as
                                                the payment reference.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="Place-order">
                                {{!-- <a href="/viewAll">Place Order</a> --}}
                                <button type="submit">Place Order</button>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
