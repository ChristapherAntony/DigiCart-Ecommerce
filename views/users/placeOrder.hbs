<script>
    $('#checkout-form').submit((e) => {
        e.preventDefault()
        $.ajax({
            url: '/placeOrder',
            method: 'post',
            data: $('#checkout-form').serialize(),
            success: (response) => {
                if(response.status){
                    location.href='/orderSuccess'
                }
            }
        })
    })
</script>