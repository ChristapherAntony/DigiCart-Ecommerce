<div class="breadcrumb-area bg-gray menuBarTop">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="/viewAll">Home</a>
                </li>
                <li class="active">Cart Page </li>
            </ul>
        </div>
    </div>
</div>
<div class="cart-main-area pt-50 pb-120 ">
    <div class="container">
        <h3 class="cart-page-title">Your cart items [{{products.length}}] </h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="table-content table-responsive cart-table-content d-none d-md-block">
                    <table>
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Until Price</th>
                                <th>Qty</th>
                                <th>Subtotal</th>
                                <th>action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>

                                <td class="product-thumbnail">
                                    <a href="/details/{{this.product._id}}"><img
                                            src="images/product-img/{{this.product.image1}}" alt="" width="100"></a>
                                </td>
                                <td class="product-name"><a
                                        href="/details/{{this.product._id}}">{{this.product.title}}</a></td>
                                <td class="product-price-cart"><span class="amount">Rs.
                                        {{this.product.offerPrice}}</span>
                                </td>
                                <td class="product-quantity pro-details-quality">
                                    <div>
                                        <button class="btn btn-light" style="display: inline-block;"
                                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}','{{this.product.offerPrice}}',-1)">-</button>
                                        <span style="display: inline-block; width: 20px;"
                                            id="{{this.product._id}}">{{this.quantity}}</span>
                                        <button class="btn btn-light" style="display: inline-block;"
                                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}','{{this.product.offerPrice}}', 1)">+</button>
                                        
                                    </div>
                                </td>
                                <td class="product-subtotal"> Rs.
                                    <span id="{{this.product.offerPrice}}">{{this.productTotal}}</span>
                                </td>
                                <td class="product-remove">

                                    <button class="btn btn-outline-danger"
                                        onclick="removeProduct('{{this._id}}','{{this.product._id}}')">X</button>

                                </td>

                            </tr>
                            {{/each}}

                        </tbody>
                    </table>

                </div>

                {{!-- table for mobile --}}
                <div class="   d-block d-md-none">
                    {{#each products}}
                    <div class="" style="height: 200px; ">
                        <div class=" col-4  float-left">
                            <a href="#"><img src="/images/product-img/{{this.product.image1}}" width="100" alt=""></a>
                        </div>
                        <div class="col-8  float-right">
                            <a class="font-weight-bold" href="#">{{this.product.title}} </a>
                            <p>MRP:{{this.product.MRP}} {{this.product.totalDiscount}}% Off <br>Offer Price:
                                {{this.product.offerPrice}}</p>
                            <div class="mt-3">
                                <div>
                                    <button class="btn btn-light" style="display: inline-block;"
                                        onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}','{{this.product.offerPrice}}',-1)">-</button>
                                    <span style="display: inline-block; width: 20px; "
                                        id="{{this.product._id}}{{this.product._id}}">{{this.quantity}}</span>
                                    <button class="btn btn-light" style="display: inline-block;"
                                        onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}','{{this.product.offerPrice}}',1)">+</button>
                                        <span id="{{this.product.offerPrice}}{{this.product.offerPrice}}">{{this.productTotal}}</span> 
                                </div>

                                <button onclick="removeProduct('{{this._id}}','{{this.product._id}}')"
                                    class="btn btn-outline-danger btn-sm ml-3"><i class="bi bi-trash3"></i></button>
                            </div>
                        </div>
                    </div>
                    {{/each }}
                </div>

                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        <div class="grand-totall">
                            <div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gary-cart">Cart Total</h4>
                            </div>
                            <h5>Total products <span><i class="bi bi-currency-rupee"></i><span
                                        id="total">{{headerDetails.total}}</span> </span></h5>
                            <div class="total-shipping">
                                <h5>Total shipping</h5>
                                <ul>
                                    <li><input type="checkbox"> Standard <span>Free </span></li>
                                    
                                </ul>
                            </div>
                            <h4 class="grand-totall-title">Grand Total <span><i class="bi bi-currency-rupee"></i><span
                                        id="g-total">{{headerDetails.total}}</span> </span></h4>
                            <a href="/ProceedToCheckOut">Proceed to Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function removeProduct(cartId, proId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                removeCartProduct(cartId, proId)

            }
        })

    }
</script>