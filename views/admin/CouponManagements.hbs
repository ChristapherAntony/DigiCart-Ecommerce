                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <!-- Modal -->







</main><!-- End #main -->


<script>
    function deleteCoupon(id) {
        console.log(id)
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/admin/deleteCoupon',
                    data: {
                        offerId: id
                    },
                    method: 'post',
                    success(response) {
                        Swal.fire(
                            'Deleted!',
                            'Your Offer has been deleted.',
                            'success'
                        )
                        location.reload()
                    }
                })

            }
        })

    }
</script>